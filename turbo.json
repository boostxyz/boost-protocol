{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "artifacts/**", "out/**", "cache/**"]
    },
    "test": {},
    "test:ci": {
      "outputs": ["coverage/**"]
    },
    "typedoc": {
      "dependsOn": ["^build"],
      "inputs": ["src"],
      "outputs": ["docs/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
