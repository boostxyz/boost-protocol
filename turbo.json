{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "packages/sdk/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "artifacts/**",
        "out/**",
        "cache/**",
        ".next/**",
        "deploys/**"
      ]
    },
    "signatures#build": {
      "inputs": ["manifests"],
      "outputs": ["dist/**"]
    },
    "lint:ci": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ci": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "typedoc": {
      "dependsOn": ["^build"],
      "inputs": ["src"],
      "outputs": ["docs/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
