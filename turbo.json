{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "VITE_ALCHEMY_API_KEY",
    "VITE_BOOST_TESTNET_SIGNER_EOA",
    "VITE_BOOST_MAINNET_SIGNER_EOA"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [".env", "src", "contracts"],
      "outputs": [
        "dist/**",
        "artifacts/**",
        "out/**",
        "cache/**",
        ".next/**",
        "deploys/**"
      ]
    },
    "@boostxyz/signatures#build": {
      "inputs": ["manifests"],
      "outputs": ["dist/**"]
    },
    "@boostxyz/cli#build": {
      "dependsOn": ["@boostxyz/evm#build"],
      "outputs": ["dist/**"]
    },
    "@boostxyz/sdk#build": {
      "dependsOn": ["^build", "@boostxyz/evm#build"],
      "inputs": [".env", "src"],
      "outputs": ["dist/**"]
    },
    "lint:ci": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ci": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "typedoc": {
      "dependsOn": ["^build", "@boostxyz/evm#build"],
      "inputs": ["src"],
      "outputs": ["docs/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
