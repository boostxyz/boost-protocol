{
  "name": "boost-protocol",
  "private": true,
  "type": "module",
  "repository": "https://github.com/boostxyz/boost-protocol",
  "author": "Boost Team<boost-team@boost.xyz>",
  "license": "GPL-3.0-or-later",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "pnpm": "9.15.0"
  },
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:release": "turbo run build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "publish-packages": "pnpm changeset publish",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:ci": "turbo lint:ci",
    "prepare": "lefthook install",
    "postinstall": "git submodule update --init",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@boostxyz/cli": "workspace:*",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "2.0.4",
    "@types/node": "^20.16.10",
    "@vitest/coverage-v8": "^2.1.1",
    "@wagmi/core": "2.13.8",
    "abitype": "^1.0.8",
    "arg": "^5.0.2",
    "danger": "^12.3.3",
    "dotenv": "16.4.7",
    "find-process": "^1.4.7",
    "hardhat": "^2.22.12",
    "lefthook": "^1.7.18",
    "prettier": "^3.3.3",
    "solady": "^0.0.288",
    "turbo": "^2.1.3",
    "typedoc": "^0.26.11",
    "typedoc-material-theme": "^1.1.0",
    "typescript": "^5.6.3",
    "viem": "2.22.1",
    "vite": "^5.4.8",
    "vitest": "^2.1.9",
    "zod": "3.24.1"
  },
  "pnpm": {
    "overrides": {
      "viem": "$viem"
    }
  }
}
